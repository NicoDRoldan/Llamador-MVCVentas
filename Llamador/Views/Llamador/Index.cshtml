@model IEnumerable<OrderGroupModel>
@{
    ViewData["Title"] = "Llamador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .custom-card {
        width: 60%;
        margin: 10px auto;
    }

    .custom-column {
        width: 50%;
    }
</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pedidos Actuales</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="card shadow mb-4 custom-card">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Pedidos Actuales</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Número de Pedido
                            </th>
                            <th>
                                Retira
                            </th>
                        </tr>
                    </thead>
                    <tbody id="orderBody">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumPedido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Retira)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts{
    <script>
        $(document).ready(function () {
            setInterval(function () {
                $.ajax({
                    url: "http://localhost:5000/api/PedidoActuales/OrderGroup",
                    type: "GET",
                    success: function (data) {
                        console.log(data);
                        $("#orderBody").empty();
                        $.each(data, function (index, item) {
                            var row = "<tr><td>" + item.numPedido + "</td><td>" + item.retira + "</td></tr>";
                            $("#orderBody").append(row);
                        });
                    },
                    error: function () {
                        console.log("Error al obtener los datos.");
                    }
                });
            }, 1000);
        });
    </script>
}